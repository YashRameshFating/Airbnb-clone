<%- include('../partials/head')%>
</head>
<body class="bg-gray-100 font-sans text-gray-800">

  <!-- Header -->
  <%- include('../partials/nav')%>

  <!-- Main Content -->
  <main class="max-w-xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
   <h1 class="text-3xl md:text-4xl font-bold text-center text-indigo-600 mb-6">
       <%= editing ? "Edit" : "Register" %> Your Home on Airbnb
    </h1>
      <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data" class="flex flex-col gap-4">
      <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">
      <input 
        type="text" 
        name="houseName" 
        value="<%= editing ? home.houseName : '' %>"
        placeholder="Enter your house name here"
        class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input 
        type="text" 
        name="price" 
         value="<%= editing ? home.price : '' %>"
        placeholder="Enter price here"
        class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input 
        type="text" 
        name="location" 
        value="<%= editing ? home.location: '' %>"
        placeholder="Enter hotel location "
        class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input 
        type="text" 
        name="rating" 
         value="<%= editing ? home.rating : '' %>"
        placeholder="Enter rating here"
        class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input 
        type="file" 
        name="photo"
        accept="image/jpg,image/png,image/jpeg"
        class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
       <textarea
        name="description" 
        placeholder="Describe your hotel"
        class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      ><%= editing ? home.description : '' %></textarea>
      <input 
        type="submit" 
        value="<%= editing ? "Update Home" :"Add Home" %>"
        class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition"
      />
    </form>
  </main>

</body>
</html>
