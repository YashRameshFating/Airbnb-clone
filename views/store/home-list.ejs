<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans text-gray-800">

  <!-- Header -->
  <%- include('../partials/nav') %>
  <!-- Main Content -->
<main class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-gray-700 text-center mb-6">
    Here are our registered homes
  </h2>

<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
  <% registeredHomes.forEach(home => { %>
    <li class="bg-white rounded-lg overflow-hidden shadow hover:shadow-lg transition duration-300">
    <img src="<%= home.photo %>" 
        alt="Home Photo" 
        class="w-full h-48 object-cover"
      >
      <div class="p-4">
        <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
        <p class="text-gray-600"><strong>Location:</strong> <%= home.location %></p>
        <p class="text-gray-600"><strong>Price:</strong> ₹<%= home.price %> / night</p>
        <p class="text-gray-600"><strong>Rating:</strong> ⭐<%= home.rating %> / 5</p>
        <a href="/homes/<%= home._id %>">Details</a>
       <%- include('../partials/favourites',{home:home}) %> 
      </div>
    </li>
  <% }) %>
</ul>

</main>


</body>
</html>
