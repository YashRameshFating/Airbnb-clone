<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans text-gray-800">

  <!-- Header -->
  <%- include('../partials/nav') %>
  <!-- Main Content -->
<main class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-gray-700 text-center mb-6">
   You are in home detail page
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="rounded-lg overflow-hidden">
                  <img src="<%= home.photo %>"  class="w-full h-96 object-cover">
      </div>
              
      <div class="space-y-6">
                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Description</h3>
